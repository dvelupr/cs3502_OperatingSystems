<Application x:Class="ShinyVMSimulator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ShinyVMSimulator"
             StartupUri="SplashScreen.xaml">
    <Application.Resources>
        
        <Style TargetType="Button">
            <Setter Property="Background" Value="#222222" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="24" />
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Background" Value="#222222" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style TargetType="TextBlock" x:Key="DefaultTerminalTextBlockStyle">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="#66A1FF" />
        </Style>

    </Application.Resources>
</Application>
